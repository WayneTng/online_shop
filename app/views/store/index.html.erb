<h1>Store</h1>

<table class = "table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th>Title</th>
      <th>Description</th>
      <th>Price</th>
      <th> Serial Number</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.id %> </td>
        <td><%= product.title %></td>
        <td><%= product.description %></td>
        <td><%= number_to_currency(product.price) %></td>
        <td><%= product.serial_number %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Recent Page', recent_path %>
